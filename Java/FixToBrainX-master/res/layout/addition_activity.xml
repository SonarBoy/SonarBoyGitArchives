<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fixtobrainx.MainActivity" >

    <Button
        android:id="@+id/checkButton"
        android:background="@drawable/checker_button_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/answerField"
        android:layout_below="@+id/answerField"
        android:layout_marginTop="16dp"
        android:text="Check" />

    <TextView
        android:id="@+id/additionTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/additionTime"
	    android:layout_below="@+id/additionTime"
	    android:layout_marginTop="17dp" >
	    
     <ProgressBar
         android:id="@+id/progressBar"
         style="?android:attr/progressBarStyleHorizontal"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/additionTime"
         android:layout_below="@+id/additionTime"
         android:layout_marginTop="17dp" />
     </ScrollView>

     <TextView
         android:id="@+id/firstNumberLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/additionTime"
         android:layout_marginBottom="5dp"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="75dp"
         android:text="Large Text"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/secondNumberLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/firstNumberLabel"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="15dp"
         android:text="Large Text"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <EditText
         android:id="@+id/answerField"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/secondNumberLabel"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="45dp"
         android:ems="10"
         android:inputType="numberSigned" >

         <requestFocus />
     </EditText>

</RelativeLayout>
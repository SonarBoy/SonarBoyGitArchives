<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fixtobrainx.MainActivity" >

 

    <TextView
        android:id="@+id/spanExampleTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spanExampleOne"
        android:layout_centerVertical="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="100dp" >

        <LinearLayout
            android:id="@+id/testingLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/spanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spanExampleTwo"
        android:layout_below="@+id/spanExampleTwo"
        android:layout_marginTop="44dp"
        android:text="Button" />

    <TextView
        android:id="@+id/spanExampleOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spanExampleTwo"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_marginBottom="24dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <SurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:layout_alignRight="@+id/scrollView1"
        android:layout_alignTop="@+id/spanExampleOne" />

    <Button
        android:id="@+id/faderButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spanButton"
        android:layout_alignRight="@+id/spanButton"
        android:layout_below="@+id/spanButton"
        android:layout_marginTop="15dp"
        android:text="Button" />

</RelativeLayout>